# ===========================================
# Shopify Customer Dashboard - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ------------------------------------------
# OPTION 1: Standalone Customer Login
# (Customers log in with email/password)
# ------------------------------------------

# Your Shopify store domain (without https://)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=culto-ues-app-test.myshopify.com

# Storefront API Access Token
# Create in: Shopify Admin > Settings > Apps and sales channels > Develop apps
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token

# Session encryption secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# ------------------------------------------
# OPTION 2: Shopify App with App Proxy
# (Customers are automatically recognized via storefront session)
# ------------------------------------------

# Your Shopify App credentials (from Partner Dashboard)
SHOPIFY_API_KEY=your-app-api-key
SHOPIFY_API_SECRET=your-app-api-secret

# Admin API access token (obtained after OAuth)
# This is logged to the console after installing the app
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-access-token

# Your app's public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------
# App Proxy Configuration (in Shopify Admin)
# ------------------------------------------
# Subpath prefix: apps
# Subpath: dashboard  
# Proxy URL: http://localhost:3000 (or your production URL)
#
# This creates: https://your-store.myshopify.com/apps/dashboard
# Shopify will pass logged_in_customer_id if customer is logged in
